{
  "extends": [
    "tslint:latest",
    "tslint-react",
    "tslint-eslint-rules",
    "tslint-config-prettier"
  ],
  "rulesDirectory": [
    "tslint-plugin-prettier"
  ],
  "rules": {
    "object-literal-sort-keys": false,
    "jsx-boolean-value": false,
    "jsx-no-lambda": false,
    "no-submodule-imports": [
      true,
      "realm-studio-svgs",
      "realm-studio-styles"
    ],
    "prettier": [
      true,
      {
        "singleQuote": true,
        "trailingComma": "all"
      }
    ]
  }
}
