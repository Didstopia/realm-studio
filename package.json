{
  "name": "realm-studio",
  "version": "0.0.1",
  "description": "A tool for everything Realm.",
  "author": "Realm Inc.",
  "repository": "https://github.com/realm/realm-studio",
  "license": "Apache 2.0",
  "main": "./build/main.js",
  "build": {
    "productName": "Realm Studio",
    "appId": "io.realm.realm-studio",
    "directories": {
      "buildResources": "./resources"
    },
    "files": [
      "./build/**/*",
      "./static/**/*",
      "./node_modules/**/*",
      "./package.json"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": "dir"
    }
  },
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "build": "tsc && node-sass ./static/styles.scss ./build/styles.css",
    "start": "electron ./build/main.js",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "dependencies": {
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "realm": "^1.10.0"
  },
  "devDependencies": {
    "@types/node": "^8.0.8",
    "@types/react": "^15.0.34",
    "@types/react-dom": "^15.5.1",
    "electron": "^1.6.11",
    "electron-builder": "^19.6.3",
    "node-sass": "^4.5.3",
    "typescript": "^2.4.2"
  }
}
