#!groovy

@Library('realm-ci') _

jobWrapper {
  stage('Bump version and tag commit') {
    node('docker') {
      rlmCheckout scm

      def nodeVersion = readFile('.nvmrc').trim()
      nvm(version: nodeVersion) {
        // Bump the version and tag the branch
        nextversion = sh script: "npm version ${NEXT_VERSION}", returnStdout: true
        echo "Preparing release of Realm Studio ${nextversion}"
        sh 'git log'
      }
    }
  }
}
